<% layout('layouts/boilerplate') %>
    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            justify-content: center;
        }

        .filter {
            text-align: center;
            margin-right: 1.5rem;
            margin-top: 2rem;
            opacity: 0.7;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
            font-weight: 500;
        }
        .tax-info {
            color: red;
            display: none;
        }
        .tax-toggle{
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.5rem;
            padding: 1rem;
            margin-left: 1.5rem;
            background-color: #f8f9fa;
        }
        .icon{
            color: red;
        }
    </style>
    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid icon fa-fire"></i></div>
            <p>Trending Now</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid icon fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid icon fa-city"></i></div>
            <p>Iconic Cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid icon fa-mountain-city"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands icon fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid icon fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid icon fa-campground"></i></i></div>
            <p>Camping</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid icon fa-cow"></i></div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid icon fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid icon fa-sailboat"></i></div>
            <p>House Boat</p>
        </div>
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <h2 class="text-center fw-bold text-primary mb-4">üè° Explore Our Listings</h2>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 g-4">
            <% for (listing of allListings) { %>
                <div class="col">
                    <a href="/listings/<%= listing._id %>" class="text-decoration-none">
                        <div class="card shadow-lg border-0 rounded-4 overflow-hidden card-hover">
                            <img class="card-img-top" style="height: 18rem; object-fit: cover;"
                                src="<%= listing.image.url %>" alt="listing_image">
                            <div class="card-img-overlay"></div>
                            <div class="card-body text-center">
                                <h5 class="fw-bold text-dark">
                                    <%= listing.title %>
                                </h5>
                                <p class="text-muted mb-1">
                                    <%= listing.location %>, <%= listing.country %>
                                </p>
                                <p class="fw-bold text-success">‚Çπ<%= Number(listing.price).toLocaleString("en-IN") %> /
                                        night<i class="tax-info">&nbsp;&nbsp; +18% GST</i></p>
                                
                            </div>
                        </div>
                    </a>
                </div>
                <% } %>
        </div>
    </div>

    <script>
        let taxSwitch = document.getElementById('switchCheckDefault');
        taxSwitch.addEventListener("click",()=>{
            let taxInfo = document.getElementsByClassName('tax-info');
            for (let i = 0; i < taxInfo.length; i++) {
                if (taxSwitch.checked) {
                    taxInfo[i].style.display = 'inline';
                } else {
                    taxInfo[i].style.display = 'none';
                }
            }
        })

    </script>